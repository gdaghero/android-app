<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Queremos saber un poco mÃ¡s de vos"
        android:textSize="@dimen/text_large2"
        android:textColor="@color/secondaryTextColor"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etxt_sign_up_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_medium"
        android:inputType="text"
        android:textSize="@dimen/text_medium"
        android:hint="@string/hint_sign_up_name"
        android:background="@drawable/shape_round_input"
        android:textColor="@color/primaryColor"/>

    <EditText
        android:id="@+id/etxt_sign_up_last_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_medium"
        android:inputType="text"
        android:textSize="@dimen/text_medium"
        android:hint="@string/hint_sign_up_last_name"
        android:background="@drawable/shape_round_input"
        android:textColor="@color/primaryColor"/>
</LinearLayout>
