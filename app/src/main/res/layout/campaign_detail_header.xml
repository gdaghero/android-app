<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:background="@drawable/ic_minimize_24px"
        android:backgroundTint="#9b9b9b"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_width="48dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small">

        <ImageView
            android:id="@+id/iv_detail_campaign_store_logo"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_alignParentStart="true"
            android:layout_height="56dp"
            android:layout_width="56dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_detail_campaign_store_logo"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_detail_campaign_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/primaryDarkColor"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/txt_detail_campaign_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/primaryLightColor"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>