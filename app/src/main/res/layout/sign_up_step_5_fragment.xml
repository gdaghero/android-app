<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/txt_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresá una contraseña"
        android:textSize="@dimen/text_large2"
        android:layout_below="@+id/iv_login_logo"
        android:textColor="@color/secondaryTextColor"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etxt_sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/shape_round_input"
        android:hint="@string/hint_sign_up_password"
        android:inputType="textPassword"
        android:imeOptions="actionNext"
        android:paddingLeft="@dimen/margin_medium"
        android:drawableRight="@drawable/ic_visibility_24px"
        android:drawableTint="#808080"
        android:paddingRight="@dimen/margin_medium"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/text_medium"/>

    <EditText
        android:id="@+id/etxt_sign_up_password_confirmation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/shape_round_input"
        android:hint="@string/hint_sign_up_password_confirmation"
        android:inputType="textPassword"
        android:imeOptions="actionGo"
        android:paddingLeft="@dimen/margin_medium"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/text_medium" />

</LinearLayout>