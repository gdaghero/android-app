<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_event_draw"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_draw_date"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/primaryLightColor"
                android:src="@drawable/ic_event_24px" />

            <TextView
                android:id="@+id/tv_draw_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_small"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/primaryColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/primaryLightColor"
                android:src="@drawable/ic_access_time_24px"/>

            <TextView
                android:id="@+id/tv_draw_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/primaryColor"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_draw"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/primaryLightColor"
                android:src="@drawable/ic_casino_24px" />

            <TextView
                android:id="@+id/tv_draw_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_small"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/primaryColor"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_draw_confirmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_draw_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#1D976C"
            android:src="@drawable/ic_done_24px" />

        <TextView
            android:id="@+id/tv_draw_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="EstÃ¡s participando de este sorteo"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            android:textColor="#1D976C"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_draw_confirmation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Participar del sorteo"
        android:layout_margin="@dimen/margin_medium"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="40dp"
        android:drawableLeft="@drawable/ic_casino_24px"
        android:drawableTint="@color/secondaryLightColor"
        android:textColor="@color/secondaryLightColor"
        android:background="@drawable/shape_round_button_bg"/>
</LinearLayout>